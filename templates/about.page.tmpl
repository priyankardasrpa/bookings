{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>About Page</h1>
                <p>Hi, {{index .StringMap "test"}}</p>
                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP Address is {{index .StringMap "remote_ip"}}
                    {{else}}
                        I don't know your IP Address yet, please visit <a href="/">Home Page</a> to set it.
                    {{end}}
                </p>
            </div>
        </div>
    </div>
{{end}}